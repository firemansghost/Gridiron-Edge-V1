{
  "name": "gridiron-edge",
  "version": "1.0.0",
  "description": "College football analytics platform for power ratings, implied spreads, and betting edge identification",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "db:migrate:deploy": "prisma migrate deploy",
    "db:migrate:dev": "prisma migrate dev",
    "db:generate": "prisma generate",
    "db:validate": "prisma validate --schema=prisma/schema.prisma",
    "db:studio": "prisma studio",
    "db:seed": "tsx prisma/seed.ts",
    "db:reset": "prisma migrate reset --force",
    "db:push": "prisma db push",
    "db:pull": "prisma db pull",
    "seed:ratings": "node apps/jobs/seed-ratings.js",
    "test:ratings": "jest apps/jobs/__tests__/seed-ratings.test.js",
    "test:ratings:v1": "jest apps/jobs/__tests__/compute_ratings_v1.test.ts",
    "test:all": "jest apps/jobs/__tests__/",
    "ingest": "node apps/jobs/ingest.js",
    "verify:ingest": "node apps/jobs/verify-ingest.js",
    "backtest": "node apps/jobs/backtest.js",
    "backfill:oddsapi": "node apps/jobs/backfill-odds-oddsapi.js",
    "repoll:week9": "node scripts/repoll-week9.js",
    "manual:week9": "node scripts/manual-week9-odds.js",
    "build:jobs": "tsc -p apps/jobs/tsconfig.build.json && node scripts/validate-aliases.mjs && node scripts/copy-job-assets-simple.mjs",
    "grade:bets": "node apps/jobs/dist/grade-bets.js",
    "scores:cfbd": "node apps/jobs/dist/src/cfbd-game-results.js",
    "stats:cfbd": "ts-node apps/jobs/src/stats/cfbd_team_stats.ts",
    "stats:season:cfbd": "ts-node apps/jobs/src/stats/cfbd_team_season_stats.ts",
    "stats:advanced:cfbd": "ts-node apps/jobs/src/stats/season_from_game_advanced.ts",
    "talent:cfbd": "ts-node apps/jobs/src/stats/cfbd_talent.ts",
    "ratings:baseline": "ts-node apps/jobs/src/ratings/baseline_from_scores.ts",
    "ratings:v1": "node apps/jobs/dist/src/ratings/compute_ratings_v1.js",
    "verify:jobs": "node scripts/validate-team-aliases.mjs && node scripts/verify-job-assets.mjs",
    "prisma:generate": "prisma generate --schema=prisma/schema.prisma",
    "postinstall": "npm run prisma:generate"
  },
  "devDependencies": {
    "@prisma/client": "6.17.0",
    "@types/js-yaml": "^4.0.9",
    "glob": "^10.4.5",
    "jest": "^29.7.0",
    "js-yaml": "^4.1.0",
    "prisma": "6.17.0",
    "tsx": "^4.6.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "npm@10.0.0"
}
